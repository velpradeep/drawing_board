.wrapper
  %header.main-header
    %a.logo{:href => "/"}
      %span.logo-mini{style: "font-size: 14px;"}
        %b>
        DB
      %span.logo-lg
        %b> DRAWING BOARD
    %nav.navbar.navbar-static-top
      %a.sidebar-toggle{"data-toggle" => "offcanvas", :href => "#", :role => "button"}
        %span.sr-only Toggle navigation
      .navbar-custom-menu
        %ul.nav.navbar-nav
          = render partial: '/shared/user_profile_info_section', locals:{user: user}
  %aside.main-sidebar
    %section.sidebar
      .user-panel
        .pull-left.image
          = image_tag "/assets/placeholder-img.jpg",:size=>"50x50", :class=>"img-circle"
        .pull-left.info
          %p #{get_user_info(user.name)[0..15]}...
          %a{:href => "/sales_crm"}
            %i.fa.fa-circle.text-success
            ONLINE
  .content-wrapper
    = yield
  %footer.main-footer
    .pull-right.hidden-xs
      %b Version
      1.0.0
    %strong
      Copyright Â© 2017-2018
      = succeed "." do
        %a{:href => "http://velpradeep.github.io"} VelPradeep
    All rights
    reserved.

